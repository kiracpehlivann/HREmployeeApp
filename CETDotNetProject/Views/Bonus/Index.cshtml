@model IEnumerable<CETDotNetProject.Models.Bonus>

@{
    ViewData["Title"] = "Prim Listesi";
}

<div class="container mt-4">
    <h2>Prim Listesi</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Prim Ekle</a>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Çalışan</th>
                <th>Prim Tutarı</th>
                <th>Prim Tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee.FirstName @item.Employee.LastName</td>
                    <td>@item.Amount</td>
                    <td>@item.BonusDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div> 